SELECT ("ei" Rha dib 3 b u) IF (-2 (B)) (-1 (E p b));
SELECT ("ei" Rha dib 3 g u) IF (-3 (B)) (-2 (E p g)) (-1 (E));
SELECT ("ei" Rha dib 3 g u) IF (-2 (B)) (-1 (E p g));

